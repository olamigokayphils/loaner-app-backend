<div class="row">
  <div class="col-md-8 col-sm-12">
    <div class="background-container"></div>
  </div>
  <div class="col-md-4 login-admin-container">
    <div class="container">
      <p style="font-size: 23px; font-weight: bold">Welcome Admin;</p>
      <form>
        <div class="form-group">
          <label>Email</label>
          <input class="form-control" type="email" required placeholder="Enter email address" />
        </div>

        <div class="form-group">
          <label>Password</label>
          <input class="form-control" type="password" required placeholder="Enter Password" />
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block btn-lg">Login</button>
        </div>
      </form>
    </div>
  </div>
</div>

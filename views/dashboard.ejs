<link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.15.4/dist/bootstrap-table.min.css" />

<style>
  body {
    background-color: #f2f2f2;
  }
  .admin-dashboard-container {
    margin: auto;
    width: calc(100% - 30px);
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-top: 30px;
  }
</style>
<div class="admin-dashboard-container">
  <h3 class="font-weight-bold">Loaner Admin Dashboard</h3>
  <p>Users Loan Request</p>

  <ul class="nav nav-tabs nav-justified md-tabs indigo" id="myTabJust" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="loan-request-tab" data-toggle="tab" href="#loan-request" role="tab" aria-controls="loan-request" aria-selected="true">Loan Request</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="loan-arroved-tab" data-toggle="tab" href="#loan-approved" role="tab" aria-controls="loan-approved" aria-selected="false">Loans Approved</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="loan-rejected-tab" data-toggle="tab" href="#loan-rejected" role="tab" aria-controls="loan-rejected" aria-selected="false">Loans Rejected</a>
    </li>
  </ul>
  <div class="tab-content card pt-5" id="myTabContentJust">
    <div class="tab-pane fade show active" id="loan-request" role="tabpanel" aria-labelledby="loan-request-tab">
      <table id="table" data-toggle="table" data-height="460" data-ajax="getLoanApplications" data-search="true" data-side-pagination="server" data-pagination="true">
        <thead>
          <tr>
            <th data-field="id">ID</th>
            <th data-field="userName">Customer Name</th>
            <th data-field="loanID">LoanID</th>
            <th data-field="requestDate">Request Date</th>
            <th data-field="loanAmount">Amount (NGN)</th>
            <th data-field="">Action</th>
          </tr>
        </thead>
      </table>
    </div>
    <div class="tab-pane fade" id="loan-approved" role="tabpanel" aria-labelledby="loan-arroved-tab">
      <table id="table" data-toggle="table" data-height="460" data-ajax="ajaxRequest2" data-search="true" data-side-pagination="server" data-pagination="true">
        <thead>
          <tr>
            <th data-field="id">ID</th>
            <th data-field="name">Customer Name</th>
            <th data-field="date">Request Date</th>
            <th data-field="amount">Amount (NGN)</th>
            <th data-field="">Action</th>
          </tr>
        </thead>
      </table>
    </div>
    <div class="tab-pane fade" id="loan-rejected" role="tabpanel" aria-labelledby="loan-rejected-tab">
      <table id="table" data-toggle="table" data-height="460" data-ajax="ajaxRequest" data-search="true" data-side-pagination="server" data-pagination="true">
        <thead>
          <tr>
            <th data-field="id">ID</th>
            <th data-field="name">Customer Name</th>
            <th data-field="date">Request Date</th>
            <th data-field="amount">Amount (NGN)</th>
            <th data-field="">Action</th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
<script src="https://unpkg.com/bootstrap-table@1.15.4/dist/bootstrap-table.min.js"></script>

<script>
  var $j = jQuery.noConflict();
  // your custom ajax request here
  function getLoanApplications(params) {
    var url = "/admin/loan-applications";
    $j.get(url + "?" + $.param(params.data)).then(function (res) {
      params.success(res);
    });
  }

  function ajaxRequest2(params) {
    var url = "https://examples.wenzhixin.net.cn/examples/bootstrap_table/data";
    $.get(url + "?" + $.param(params.data)).then(function (res) {
      params.success(res);
    });
  }
</script>
